<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/country_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkable="true"
        android:clickable="true"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        android:elevation="5dp">
        <RelativeLayout
            android:id="@+id/country_card_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/country_card_country_flag_image"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/country_card_country_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/country_card_country_flag_image"
                android:text="Country Name"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/country_card_country_native_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/country_card_country_name"
                android:layout_toRightOf="@id/country_card_country_flag_image"
                android:text="Country Native Name"
                android:layout_marginTop="15dp"
                android:textSize="16dp"/>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>